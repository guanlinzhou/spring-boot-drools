package com.springdrools.rules

import com.springdrools.model.Item;
import com.springdrools.model.Purchase;

rule "Classify Item - Low Range"
    when
        $i: Item(cost < 200)
    then
        $i.setCategory(Item.Category.LOW_RANGE);
end

rule "Single Item Sale - Frosted Flakes"
    when
        $i: Item(name == "Frosted Flakes")
    then
        $i.setDiscount(20.0);
end

rule "Total Cost Sale"
    when
        $p: Purchase(subtotal > 100)
    then
        $p.setDiscount(20.0);
end

rule "Tax - California"
    when
        $p: Purchase(state == "California")
    then
        $p.setTax(7.25);
end

rule "Tax - Colorado"
    when
        $p: Purchase(state == "Colorado")
    then
        $p.setTax(2.9);
end

rule "Tax - India"
    when
        $p: Purchase(state == "India")
    then
        $p.setTax(18.0);
end

rule "Tax - British Columbia"
    when
        $p: Purchase(state == "British Columbia")
    then
        $p.setTax(12.0);
end